@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row g-4">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Responsive Table</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Durumu</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.CategoryID</th>
                                <td>@item.CategoryName</td>
                                @if(item.CategoryStatus==true)
                                {
                                    <td class="text-success"><i class="fa fa-circle text-success"></i> Aktif</td>

                                }
                                @if (item.CategoryStatus == false)
                                {
                                    <td class="text-danger"><i class="fa fa-circle text-danger"></i> Pasif</td>

                                }
                                <td><a href="" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                        
                      
                    </tbody>
                </table>
                <a href="" class="btn btn-outline-info">Yeni Kategori Girişi</a>

            </div>
        </div>
    </div>
</div>