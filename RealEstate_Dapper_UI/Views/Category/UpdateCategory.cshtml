@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h6 class="mb-4">Kategori Güncelleme Sayfası</h6>
<form method="Post">
    <input type="hidden" asp-for="CategoryID" />
    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <br />
    <label>Kategori Durumu</label>
    <input type="text" asp-for="CategoryStatus" class="form-control" />
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>
