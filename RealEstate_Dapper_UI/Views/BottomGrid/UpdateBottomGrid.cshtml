@model UpdateBottomGridDto
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">

                <h6 class="mb-4">Yeni Özellik Güncelleme Sayfası</h6>
                <form method="Post">
                    <input type="hidden" asp-for="BottomGridID" />
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label>Icon</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                        </div>
                        <div class="col-md-6">
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label>Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <br />
                        </div>
                        <div class="col-md-6">
                            @*  <label>Telefon Numarası</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                            <br />  *@
                        </div>

                    </div>



                    <button class="btn btn-success">Özellik Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



