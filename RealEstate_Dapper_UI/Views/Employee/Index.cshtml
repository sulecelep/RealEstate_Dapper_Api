@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h6 class="mb-4">Personel Listesi</h6>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Personel Adı</th>
                <th scope="col">Ünvan</th>
                <th scope="col">E-mail</th>
                <th scope="col">Telefon</th>
                <th scope="col">Durum</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.EmployeeID</th>
                    <td>@item.Name</td>
                    <td>@item.Title</td>
                    <td>@item.Mail</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Status</td>

                    <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }


        </tbody>
    </table>
    <a href="/Employee/CreateProduct/" class="btn btn-outline-info">Yeni Personel Girişi</a>

</div>



